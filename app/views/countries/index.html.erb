
<div class="accordion card-container" id="accordionExample">
  <div>
    <div class="card-header banner-image mb-5 mt-5" id="headingOne">
      <h2 class="mb-0 relative">
      <%= link_to "Europe", "#", class: "btn btn-link title title-overlay", style: "text-decoration:none", data: { toggle: "collapse", target: "#collapseOne" },  aria: {expanded: "true", controls: "collapseOne"} %>
        <!-- <button class="btn btn-link title title-overlay" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne"> -->
          <!-- Europe -->
        <!-- </button> -->
      </h2>
    </div>

    <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
      <div class="card-body">
        <div class= "europe-dropdown">
          <% @countries.where(continent: "Europe").each do |country| %>
          <%= link_to country_path(country) do %>
              <div class= "europe-grid">
                <div class="overlay">
                  <h2><%= country.name %></h2>
                </div>
                <%= cl_image_tag country.photo.key, class: "grid-photo" %>
              </div>
              <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
