<div class="container mt-3">
  <h1 style="margin-left: 10px;"><%= @country.name %></h1>
  <div class="row">
    <div class="col-7 scroll-style">
      <% @resorts.each do |resort| %>
      <div class="resort-card-show">
        <%= cl_image_tag resort.photo.key %>
        <div class="resort-info-show">
          <div class="resort-title-show">
            <h6><%= resort.name %></h6>
            <div class="resort-users">
              <p><%= resort.groups.size %> active groups</p>
              <i class="fas fa-users"></i>
            </div>
          </div>
          <p><%= resort.description.split(".").slice(0,1).join(".") %></p>
          <div class="resort-bottom">
            <div class="resort-icons">
              <div class="icon-info">
                <i class="fas fa-mountain"></i>
                <p><%= (rand()*5000).round(0) %>  m</p>
              </div>
              <div class="icon-info">
                <i class="fas fa-snowflake"></i>
                <p><%= (rand()*50).round(0) %> cm</p>
              </div>
              <div class="icon-info">
                <i class="fas fa-skiing"></i>
                <p><%= (rand()*300).round(0) %>  m</p>
              </div>
              <div class="icon-info">
                <i class="fas fa-temperature-low"></i>
                <p><%= ["moderate", "overcast", "snowing", "dry", "mild"].sample %></p>
              </div>
            </div>
            <div class="resort-cost">
              <p><%= resort.country.cost %></p>
            </div>
          </div>
          <div class="resort-btn">
          <%= link_to "Join a squad", resort_path(resort) %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
    <div class="col-5 mt-2" style="height: 100vmin; width: 100%">
      <div
      id="map"
      style="width: 100%;
      height: 600px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    ></div>
    </div>
  </div>
</div>
