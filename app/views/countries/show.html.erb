<div class="container">
  <div class="row">
    <div class="col-7 mt-3">
    <h1 style="margin-left: 10px;"><%= @country.name %></h1>
      <% @resorts.each do |resort| %>
      <div class="resort-card-show d-flex">
        <%= cl_image_tag resort.photo.key %>
        <div class="resort-info-show p-3" style="width: 100%;">
          <div class="resort-title-show d-flex justify-content-between">
            <h6><%= resort.name %></h6>
            <div class="resort-users">
              <p class="resort-card-active-groups"><%= resort.groups.size %> active groups</p>
              <i class="fas fa-users"></i>
            </div>
          </div>
          <p class="resort-card-resort-description"><%= resort.description.split(".").slice(0,2).join(".") %></p>
          <div class="resort-bottom d-flex justify-content-between py-3">
            <div class="icon-info d-flex flex-column align-items-center">
              <i class="fas fa-mountain"></i>
              <p><%= (rand()*5000).round(0) %>  m</p>
            </div>
            <div class="icon-info d-flex flex-column align-items-center">
              <i class="fas fa-snowflake"></i>
              <p><%= (rand()*50).round(0) %> cm</p>
            </div>
            <div class="icon-info d-flex flex-column align-items-center">
              <i class="fas fa-skiing"></i>
              <p><%= (rand()*300).round(0) %>  m</p>
            </div>
            <div class="icon-info d-flex flex-column align-items-center">
              <i class="fas fa-temperature-low"></i>
              <p><%= ["moderate", "overcast", "snowing", "dry", "mild"].sample %></p>
            </div>
            <div class="resort-cost align-self-center">
              <h5><%= resort.country.cost %></p>
            </div>
            <div class="d-flex justify-content-end">
              <%= link_to "Join a squad", resort_path(resort), class: "resort-btn" %>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
    <div class="col-5" id="mapbox-container-countries-show">
      <div
      id="map"
      style="width: 100%;
      height: 100%;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
</div>
