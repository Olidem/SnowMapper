<% @memberships.each do |membership| %>
  <% if membership.user == current_user %>
    <ul>
      <li><%= membership.group.name %></li>
      <li><%= membership.admin %></li>
      <li><%= membership.group.description %></li>
      <li><%= membership.user.first_name %></li>
      <% if !membership.admin? %>
          <li><h2><%= link_to "Remove member", membership_path(membership), method: :delete, data: { confirm: "Are you sure?" } %></h2></li>
          <li><h2><%= link_to "Make admin", membership_path(membership, membership: { admin: true }), method: :patch %></h2></li>
        <% else %>
          <li><h2><%= link_to "Remove admin", membership_path(membership, membership: { admin: false }), method: :patch %></h2></li>
      <% end %>
    </ul>
  <% end %>
<% end %>
