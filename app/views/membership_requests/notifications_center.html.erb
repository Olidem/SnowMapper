<nav>
  <div class="nav nav-tabs mx-0 py-0 d-flex justify-content-start" id="nav-tab" role="tablist">
    <a class="notification-first-tab mr-3 nav-item nav-link active" id="nav-your-groups-tab" data-toggle="tab" href="#nav-your-groups" role="tab" aria-controls="nav-your-groups" aria-selected="true">Your groups</a>
    <a class="mx-3 nav-item nav-link" id="nav-new-messages-tab" data-toggle="tab" href="#nav-new-messages" role="tab" aria-controls="nav-new-messages" aria-selected="false">New messages<span class="badge badge-danger ml-2" style="align-self: start; font-weight: 500"><%= total_no_of_groups_with_unread_messages if total_no_of_groups_with_unread_messages > 0 %></span></a>
    <a class="mx-3 nav-item nav-link" id="nav-membership-requests-tab" data-toggle="tab" href="#nav-membership-requests" role="tab" aria-controls="nav-membership-requests" aria-selected="false">Membership requests<span class="badge badge-danger ml-2" style="align-self: start; font-weight: 500" id="user_approvals_notification"><%= user_approvals_no if user_approvals_no > 0 %></span></a>
  </div>
</nav>
<div class="tab-content" id="nav-tabContent">
  <div class="tab-pane fade show active" id="nav-your-groups" role="tabpanel" aria-labelledby="nav-your-groups-tab">
    <div class="container mt-3">
      <%= render "shared/group_cards_container", groups: @groups %>
    </div>
  </div>
  <div class="tab-pane fade" id="nav-new-messages" role="tabpanel" aria-labelledby="nav-new-messages-tab">
    <div class="container mt-3">
      <% if @groups_with_new_messages.any? %>
        <% @groups_with_new_messages.each do |group_with_new_messages| %>
          <%= render partial: "shared/group_card", locals: {group: group_with_new_messages} %>
        <% end %>
      <% else %>
      <h2 class= "mt-3" style="text-align: center;">No new messages</h2>
      <% end %>
    </div>
  </div>
  <div class="tab-pane fade" id="nav-membership-requests" role="tabpanel" aria-labelledby="nav-membership-requests-tab">
    <div class="container mt-3">
      <div id="membership-request-cards-container">
        <%= render partial: "shared/membership_request_card_container", locals: {membership_requests: @membership_requests} %>
      </div>
    </div>
  </div>
</div>
