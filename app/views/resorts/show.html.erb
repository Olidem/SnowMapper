<!-- Setting live resort data -->
<% data = SkiReportScrape.new(@resort).scrape_data %>

<div class="mountain-banner-image mb-3 p-3">
  <div class="inner-mountain-container container">

    <div>
      <div class="resort-title-container">
        <div class="d-flex">
          <h1 class="pb-3" style="font-weight: bold;"><%= @resort.name %></h1>
          <% if data[:status].downcase == "closed" %>
            <%= image_tag 'closed-icon', class: "resort-icon ml-3" %>
          <% end %>
        </div>
        <p class="resort-description"><%= (@resort.description).html_safe %></p>
      </div>

      <% if data[:status].downcase == "open" %>
        <div class='d-flex justify-content-between resort-icon-container'>
           <div class="text-center">
            <%= image_tag 'open-icon', class: "resort-icon" %>
          </div>
          <div class="text-center">
            <%= image_tag 'snow-icon', class: "resort-icon" %>
            <p class="resort-data-text">Fall today: <%= data[:snowfall_today] %></p>
            <p class="resort-data-text">Condition: <%= data[:snow_condition] %></p>
          </div>
          <div class="text-center">
            <%= image_tag 'snow-icon', class: "resort-icon" %>
            <p class="resort-data-text">Fall tomorrow: <%= data[:snowfall_tomorrow] %></p>
          </div>
          <div class="text-center">
            <%= image_tag 'runs-icon', class: "resort-icon" %>
            <p class="resort-data-text"><%= data[:open_runs] %> runs open</p>
          </div>
           <div class="text-center">
            <%= image_tag 'piste-icon', class: "resort-icon" %>
            <p class="resort-data-text"><%= data[:open_piste] %> of piste open</p>
          </div>
           <div class="text-center">
            <%= image_tag 'lift-icon', class: "resort-icon" %>
            <p class="resort-data-text"><%= data[:open_runs] %> lifts open</p>
          </div>
        </div>
      <% end %>
    </div>
    <%#= link_to "Visit #{@resort.name}.com", @resort.website_url, target: :_blank, class: "resort-url-link btn btn-dark" %>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-3">
      <div class="d-flex align-items-center mb-3">
        <% if current_user.resort == @resort %>
          <%= image_tag "checked-in.png", class: "check-in-image" %>
          <p class="check-in-text">You're checked in at <%= @resort.name %></h2>
        <% else %>
          <%= link_to image_tag("checked-out.png"), :resorts_add_user, class: "check-in-image" %>
          <p class="check-in-text">Check in at <%= @resort.name %>?</h2>
        <% end %>
      </div>
      <div class="group-filters">
        <p><%= @groups.count %> active squads in <%= @resort.name %> right now!</p>
        <div class="dropdown">
          <button class="btn btn-light my-3 dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Sort groups by
          </button>
          <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <%= link_to "Biggest", resorts_sort_user_count_path(@resort), class: "dropdown-item" %>
            <%= link_to "Newest", resorts_sort_group_created_path(@resort), class: "dropdown-item" %>
            <%= link_to "Most active", resorts_sort_latest_message_path(@resort), class: "dropdown-item" %>
          </div>
        </div>
        <p><%= @resort.users.count %> squaddies checked in at <%= @resort.name %> right now!</p>
        <div class="group-users-avatars mt-auto">
          <% @resort.users.each do |user| %>
            <span class="group-users-avatar">
              <img src=<%= cl_image_path user.photo.key %>>
            </span>
          <% end %>
        </div>
        <p>No groups that match your interests?</p>
        <button type="button" class="btn btn-light my-3" data-toggle="modal" data-target="#createGroupModel">
          Create a new group
        </button>
      </div>
    </div>
    <div class="col-9">
      <div class="group-cards">
        <% @groups.each do |group| %>
          <%= render partial: "shared/group_card", locals: {group: group} %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- New group modal -->
<div class="modal fade" id="createGroupModel" tabindex="-1" role="dialog" aria-labelledby="createGroupModelLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <%= render partial: "shared/group_new_for_modal", locals: { resort: @resort, group: @group } %>
      </div>
    </div>
  </div>
</div>
