<div class="container">
  <div class="d-flex justify-content-around new-group-form">
    <%= simple_form_for [@resort, @group] do |f| %>
      <%= f.input :name, as: :string %>
      <%= f.input :description, as: :text %>
      <%= f.input :locked %>
      <%= f.input :photo, as: :file, input_html: { class: 'new-group-modal-button' } %>
        <%= f.submit "Submit", class: "group-action-button-inverted" %>
    <% end %>
  </div>
</div>
