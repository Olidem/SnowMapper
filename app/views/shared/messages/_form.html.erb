<div id="new_message">
<%= simple_form_for [@group, @message], remote: true do |f| %>
  <%= f.input :content, label: false, placeholder: "Reach out to your pals here...", input_html: { rows: 1 } %>
  <%= f.submit "Submit", class: "btn btn-primary chat-submit-btn", style: "width: 100%;" %>
<% end %>
</div>
