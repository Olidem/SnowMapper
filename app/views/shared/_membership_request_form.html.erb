<div class="m-3">
  <%= simple_form_for([group, MembershipRequest.new], remote: true) do |f| %>
    <%= f.input :content, as: :string, label: "Send the group a quick message!", autofocus: true %>
    <div class="d-flex justify-content-center">
      <%= f.submit "Submit", class: "btn btn-primary", id: "membership-request-sent" %>
    </div>
  <% end %>
</div>
